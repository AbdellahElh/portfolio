---
import { IconPDF } from '@/components/icons';
const { title, issuer, issuedOn, url, filePath } = Astro.props;
---
<article class="rounded-2xl border border-slate-200/60 dark:border-slate-800 p-5 flex flex-col gap-2">
  <h3 class="text-lg font-semibold tracking-tight">{title}</h3>
  <p class="text-sm text-slate-600 dark:text-slate-300">{issuer} â€¢ {issuedOn}</p>
  <div class="mt-2 flex gap-3">
    <a class="px-3 py-1.5 rounded-xl bg-sky-600 text-white text-sm hover:bg-sky-500" href={url} target="_blank" rel="noreferrer">View Credential</a>
    {filePath && <a class="inline-flex items-center gap-2 px-3 py-1.5 rounded-xl border border-slate-200/60 dark:border-slate-800 text-sm hover:bg-slate-50 dark:hover:bg-slate-900" href={filePath} target="_blank" rel="noreferrer">
      <span set:html={IconPDF()}></span>
      Download PDF
    </a>}
  </div>
</article>
